<Window x:Class="DamageVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DamageVisualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel Margin="0,0,0,0" Background="Aqua" HorizontalAlignment="Left" VerticalAlignment="Top" Width="790">
            <Button Name="BtnGenerate" Height="32" Margin="10,10,10,10" Width="220" Content="Генерировать исходные данные" Click="BtnGenerate_Click" />
            <Button Name="BtnCalc" Content="Рассчет" Margin="0,10,10,10" Width="149" Click="BtnCalc_Click" HorizontalAlignment="Left" ></Button>
        </DockPanel>
        <DockPanel Margin="0,57,594,10" Background="Azure">
            <ListBox Name="ListBoxCombinations" Width="190" Height="357" GotFocus="ListBoxCombinations_GotFocus"/>
        </DockPanel>
        <DockPanel Margin="211,57,10,10" Background="AliceBlue">
            <Image Name="img" DockPanel.Dock="Left" Width="576" Height="350" Stretch="None"/>
        </DockPanel>

    </Grid>
</Window>
